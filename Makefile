run:
	./node_modules/grunt-cli/bin/grunt serve

watch:
	./node_modules/grunt-cli/bin/grunt watch

ncu:
	./node_modules/npm-check-updates/bin/npm-check-updates

ncu-update:
	./node_modules/npm-check-updates/bin/npm-check-updates -u

bcu:
	./node_modules/bower-check-updates/bin/bower-check-updates

bcu-update:
	./node_modules/bower-check-updates/bin/bower-check-updates -u